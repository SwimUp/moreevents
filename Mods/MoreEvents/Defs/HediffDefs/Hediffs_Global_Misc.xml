    <lethalSeverity>1</lethalSeverity>
    <tendable>true</tendable>
    <comps>
      <li Class="MoreEvents.Hediffs.HediffCompProperties_NeuroWormsTick">
      </li>
      <li Class="HediffCompProperties_TendDuration">
        <baseTendDurationHours>24</baseTendDurationHours>
        <severityPerDayTended>-0.060</severityPerDayTended>
      </li>
      <li Class="HediffCompProperties_Immunizable">
        <severityPerDayNotImmune>7.306</severityPerDayNotImmune>
        <immunityPerDaySick>0.140</immunityPerDaySick>
        <severityPerDayImmune>-0.3</severityPerDayImmune>
        <immunityPerDayNotSick>-0.06</immunityPerDayNotSick>
      </li>
    </comps>
    <stages>
      <li>
        <label>easy</label>
        <painOffset>-1.0</painOffset>
