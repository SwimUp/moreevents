<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<RecipeDef>
		<defName>GetHydrogen</defName>
		<label>Make hydrogen cylinder</label>
		<description>Convert liquefied natural gas to hydrogen.</description>
		<jobString>Gets hydrogen</jobString>
		<workAmount>1200</workAmount>
		<workSpeedStat>SmeltingSpeed</workSpeedStat>
		<effectWorking>Smelt</effectWorking>
		<soundWorking>Recipe_Smelt</soundWorking>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>IronIngot</li>
					</thingDefs>
				</filter>
				<count>5</count>
			</li>
		</ingredients>
		<products>
			<HydrogenCylinder>2</HydrogenCylinder>
		</products>
		<fixedIngredientFilter>
			<thingDefs>
				<li>IronIngot</li>
			</thingDefs>
		</fixedIngredientFilter>
		<researchPrerequisite>HydrogenProduction</researchPrerequisite>
	</RecipeDef>
	
	<RecipeDef>
		<defName>GetLeqGasCycl</defName>
		<label>Make liquefied natural gas cylinder</label>
		<description>Make a cylinder and fill it with liquefied natural gas</description>
		<jobString>Makes a liquefied natural gas cylinder</jobString>
		<workAmount>800</workAmount>
		<workSpeedStat>SmeltingSpeed</workSpeedStat>
		<effectWorking>Smelt</effectWorking>
		<soundWorking>Recipe_Smelt</soundWorking>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>IronIngot</li>
					</thingDefs>
				</filter>
				<count>5</count>
			</li>
		</ingredients>
		<products>
			<LiquefiedNaturalGasCylinder>2</LiquefiedNaturalGasCylinder>
		</products>
		<fixedIngredientFilter>
			<thingDefs>
				<li>IronIngot</li>
			</thingDefs>
		</fixedIngredientFilter>
	</RecipeDef>
	
</Defs>
