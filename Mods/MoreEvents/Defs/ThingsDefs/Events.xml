<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <ThingDef ParentName="BuildingBase">
    <defName>MechanoidTeleport_Generator</defName>
    <label>Portal Power Generator</label>
    <description>It seems that there is something inside that generates enough energy to support the teleport.</description>
	<thingClass>MoreEvents.Things.Building_MechanoidTeleport_Generator</thingClass>
	<altitudeLayer>Building</altitudeLayer>
    <pathCost>150</pathCost>
    <blockWind>true</blockWind>
    <passability>Impassable</passability>
    <fillPercent>1.0</fillPercent>
    <graphicData>
      <texPath>Things/Buildings/Generator/1</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(4,4)</drawSize>
			<shadowData>
				<volume>(5.17, 1.0, 2.4)</volume>
        <offset>(-0.16, 0, -0.08)</offset>
			</shadowData>
    </graphicData>
    <size>(4,4)</size>
    <statBases>
      <MaxHitPoints>3500</MaxHitPoints>
      <Flammability>0</Flammability>
      <Beauty>-200</Beauty>
    </statBases>
    <tickerType>Normal</tickerType>
		<leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
    <killedLeavings>
      <Steel>2000</Steel>
      <Plasteel>300</Plasteel>
      <ChunkSlagSteel>15</ChunkSlagSteel>
      <ComponentIndustrial>70</ComponentIndustrial>
      <ComponentSpacer>25</ComponentSpacer>
    </killedLeavings>
    <rotatable>true</rotatable>
    <selectable>true</selectable>
    <neverMultiSelect>true</neverMultiSelect>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <soundImpactDefault>BulletImpact_Metal</soundImpactDefault>
    <drawerType>MapMeshOnly</drawerType>
    <repairEffect>ConstructMetal</repairEffect>
    <forceDebugSpawnable>true</forceDebugSpawnable>
    <building>
			<claimable>false</claimable>
			<soundAmbient>CrashedShipPart_Ambience</soundAmbient>
      <roofCollapseDamageMultiplier>0.2</roofCollapseDamageMultiplier>
    </building>
  </ThingDef>
  
  <ThingDef ParentName="BuildingBase">
    <defName>MechanoidTeleport</defName>
    <label>Teleport</label>
    <description>The hole in space generated by the generator. Allows mechanoids on that side to cross here without obstacles</description>
	<thingClass>MoreEvents.Things.Building_MechanoidTeleport</thingClass>
	<altitudeLayer>Building</altitudeLayer>
    <pathCost>150</pathCost>
	<useHitPoints>false</useHitPoints>
    <blockWind>true</blockWind>
    <passability>Impassable</passability>
    <fillPercent>1.0</fillPercent>
    <graphicData>
      <texPath>Things/Buildings/MechanoidTeleport/1</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(2,3)</drawSize>
    </graphicData>
    <size>(2,3)</size>
    <tickerType>Normal</tickerType>
		<leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
    <rotatable>true</rotatable>
    <selectable>true</selectable>
    <neverMultiSelect>true</neverMultiSelect>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <soundImpactDefault>BulletImpact_Metal</soundImpactDefault>
    <repairEffect>ConstructMetal</repairEffect>
    <forceDebugSpawnable>true</forceDebugSpawnable>
    <building>
			<claimable>false</claimable>
			<soundAmbient>CrashedShipPart_Ambience</soundAmbient>
    </building>
  </ThingDef>
  
  <ThingDef ParentName="BuildingBase">
    <defName>HiveCrack</defName>
