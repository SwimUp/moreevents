<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef ParentName="DarkNetDrugPillBase">
		<defName>MutagenicSerum</defName>
		<label>Mutagenic serum</label>
		<description>A solution of special viruses, slightly radioactive liquids, and also complex chemical reagents, when injected into the blood, begins to replace the carrier DNA chains with more advanced, often artificially obtained, the process is accompanied by very strong unpleasant sensations, and a very large dose can be fatal.</description>
		<graphicData>
			<texPath>Things/Medical/MutagenicSerum</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
		</graphicData>
		<rotatable>false</rotatable>
		<statBases>
			<MarketValue>300</MarketValue>
			<Mass>0.1</Mass>
		</statBases>
		<techLevel>Spacer</techLevel>
		<ingestible>
			<drugCategory>Medical</drugCategory>
			<outcomeDoers>
				<li Class="IngestionOutcomeDoer_GiveHediff">
					<hediffDef>MutagenicSerumDebuffHediff</hediffDef>
					<severity>0.2</severity>
				</li>
				<li Class="IngestionOutcomeDoer_GiveHediff">
					<hediffDef>MutagenicSerumHediff</hediffDef>
					<severity>0.25</severity>
				</li>
			</outcomeDoers>
		</ingestible>
		<comps>
			<li Class="CompProperties_Drug">
				<isCombatEnhancingDrug>false</isCombatEnhancingDrug>
				<listOrder>200</listOrder>
			</li>
		</comps>
	</ThingDef>

